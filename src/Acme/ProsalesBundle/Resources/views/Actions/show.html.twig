{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Actions</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ entity.sujet }}</td>
            </tr>
            <tr>
                <th>A</th>
                <td>{{ entity.a }}</td>
            </tr>
            <tr>
                <th>Cc</th>
                <td>{{ entity.cc }}</td>
            </tr>
            <tr>
                <th>Cci</th>
                <td>{{ entity.cci }}</td>
            </tr>
            <tr>
                <th>Pj</th>
                <td>{{ entity.pj }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('actions') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('actions_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
