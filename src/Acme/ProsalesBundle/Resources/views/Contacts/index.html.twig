{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contacts list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Fixe</th>
                <th>Fax</th>
                <th>Mobile</th>
                <th>Adresse</th>
                <th>Observation</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Connectedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contacts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.fixe }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.observation }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.connectedAt %}{{ entity.connectedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contacts_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contacts_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contacts_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
